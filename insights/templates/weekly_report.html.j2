{% extends "base.html.j2" %}

{% block title %}Minecraft 資源週報 - {{ data.report.timestamp }}{% endblock %}

{% block extra_css %}
<style>
    .platform-badge {
        font-size: 0.8em;
        padding: 0.3em 0.6em;
    }
    {% for platform, config in data.platforms.items() %}
    .{{ platform }} {
        background-color: var(--bs-{{ config.color }});
        color: white;
    }
    {% endfor %}
    
    /* Tab 樣式 */
    .nav-tabs .nav-link {
        color: var(--bs-body-color);
        border-bottom: none;
    }
    .nav-tabs .nav-link:hover {
        border-color: var(--bs-border-color);
        isolation: isolate;
    }
    .nav-tabs .nav-link.active {
        font-weight: 500;
        border-color: var(--bs-border-color) var(--bs-border-color) #fff;
    }
    .nav-tabs .nav-link .badge {
        font-weight: normal;
        font-size: 0.75em;
    }
</style>
{% endblock %}

{% block content %}
<h1 class="mb-4">Minecraft 資源週報</h1>
<p class="text-muted">資料更新時間：{{ data.report.timestamp }}</p>

<!-- 本週新星 -->
<div class="card mb-4">
    <div class="card-header">
        <h2 class="h5 mb-0">🌟 本週新星</h2>
    </div>
    <div class="card-body">
        <div class="row">
            {% for resource in data.report.trending.rising_stars %}
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ resource.website_url }}" target="_blank">{{ resource.name }}</a>
                            <span class="badge platform-badge {{ resource.platform.lower() }}">
                                {{ data.platforms[resource.platform.lower()].label }}
                            </span>
                        </h5>
                        <p class="card-text">{{ resource.description }}</p>
                        <p class="card-text">
                            <small class="text-muted">
                                作者：{{ resource.author }} |
                                下載次數：{{ "{:,}".format(resource.downloads) }}
                            </small>
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<!-- 版本更新趨勢 -->
<div class="card mb-4">
    <div class="card-header">
        <h2 class="h5 mb-0">📊 版本支援趨勢</h2>
    </div>
    <div class="card-body">
        <h3 class="h6">熱門版本 Top 5</h3>
        <ul class="list-group">
            {% for version, stats in data.report.version_updates.popular_versions %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ version }}
                <span class="badge bg-primary rounded-pill">
                    {{ stats.count }} 個資源
                </span>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>

<!-- 分類焦點 -->
<div class="card mb-4">
    <div class="card-header">
        <h2 class="h5 mb-0">📦 分類焦點</h2>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs mb-3" id="categoryTabs" role="tablist">
            {% for category, highlights in data.report.category_highlights.items() %}
            <li class="nav-item" role="presentation">
                <button class="nav-link {% if loop.first %}active{% endif %}" 
                        id="tab-{{ category }}" 
                        data-bs-toggle="tab" 
                        data-bs-target="#content-{{ category }}" 
                        type="button" 
                        role="tab">
                    {{ category | resource_type_name }}
                    <span class="badge bg-secondary ms-1">{{ highlights.total_resources }}</span>
                </button>
            </li>
            {% endfor %}
        </ul>
        
        <div class="tab-content" id="categoryTabContent">
            {% for category, highlights in data.report.category_highlights.items() %}
            <div class="tab-pane fade {% if loop.first %}show active{% endif %}" 
                 id="content-{{ category }}" 
                 role="tabpanel">
                <p class="text-muted">
                    總資源數：{{ highlights.total_resources }} |
                    總下載次數：{{ "{:,}".format(highlights.total_downloads) }}
                </p>
                <div class="list-group">
                    {% for resource in highlights.top_resources %}
                    <a href="{{ resource.website_url }}" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{ resource.name }}</h5>
                            <span class="badge platform-badge {{ resource.platform.lower() }}">
                                {{ data.platforms[resource.platform.lower()].label }}
                            </span>
                        </div>
                        <p class="mb-1">{{ resource.description }}</p>
                        <small class="text-muted">
                            作者：{{ resource.author }} |
                            下載次數：{{ "{:,}".format(resource.downloads) }}
                        </small>
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<!-- 平台統計 -->
<div class="card mb-4">
    <div class="card-header">
        <h2 class="h5 mb-0">📈 平台統計</h2>
    </div>
    <div class="card-body">
        <div class="row">
            {% for platform, stats in data.report.platform_stats.items() %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ data.platforms[platform.lower()].label }}</h5>
                        <p class="card-text">
                            總資源數：{{ stats.total_resources }}<br>
                            總下載次數：{{ "{:,}".format(stats.total_downloads) }}
                        </p>
                        <h6 class="card-subtitle mb-2 text-muted">資源類型分布</h6>
                        <ul class="list-unstyled">
                            {% for type, count in stats.resource_types.items() %}
                            <li>{{ type }}: {{ count }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %} 