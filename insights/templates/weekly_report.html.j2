                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    {% endfor %}
    
    // ç¶å®šå±•é–‹/æ”¶åˆäº‹ä»¶
    document.querySelectorAll('.chart-toggle').forEach(toggle => {
        toggle.addEventListener('click', function() {
            const chartId = this.dataset.target;
            const chart = document.getElementById(chartId);
            if (chart) {
                chart.classList.toggle('show');
                this.textContent = chart.classList.contains('show') ? 'æ”¶åˆè¶¨å‹¢åœ–' : 'å±•é–‹è¶¨å‹¢åœ–';
            }
        });
    });
    
    // æª¢æŸ¥æè¿°å…§å®¹æ˜¯å¦éœ€è¦å±•é–‹æŒ‰éˆ•
    document.querySelectorAll('.description-container').forEach(container => {
        const content = container.querySelector('.description-content');
        const toggle = container.querySelector('.description-toggle');
        
        if (content && toggle) {
            // æª¢æŸ¥å…§å®¹æ˜¯å¦è¶…éæœ€å¤§é«˜åº¦
            const isOverflowing = content.scrollHeight > content.clientHeight;
            
            if (isOverflowing) {
                container.classList.add('has-more');
                
                // ç¶å®šå±•é–‹/æ”¶åˆäº‹ä»¶
                toggle.addEventListener('click', function() {
                    content.classList.toggle('expanded');
                    container.classList.toggle('expanded');
                    toggle.classList.toggle('expanded');
                    toggle.textContent = content.classList.contains('expanded') ? 
                        'æ”¶åˆè©³ç´°è³‡è¨Š' : 'å±•é–‹è©³ç´°è³‡è¨Š';
                });
            }
        }
    });
});
</script>
